~# MongoDB Connection
MONGO_URI=mongodb://localhost:27017/virustotal-scanner

# JWT Secret (generate a random string)
JWT_SECRET=your_super_secret_jwt_key_here_change_this

# VirusTotal API Key
VT_API_KEY=your_virustotal_api_key_here

# PageSpeed Insights API Key
PSI_API_KEY=your_pagespeed_insights_api_key_here

# Gemini API Keys for Report Refinement
# Primary API key (required)
GEMINI_API_KEY=your_gemini_api_key_here

# Fallback API keys (optional - highly recommended to avoid rate limits)
# Add as many as you want: GEMINI_API_KEY_2, GEMINI_API_KEY_3, etc.
# The system will automatically try the next key if one fails or is overloaded
GEMINI_API_KEY_2=your_second_gemini_api_key_here
GEMINI_API_KEY_3=your_third_gemini_api_key_here

# Translation Service
# Uses free Google Translate API (@iamtraction/google-translate)
# No API key required - works out of the box!

# Server Port
PORT=3001

# Node Environment
NODE_ENV=development

# Email Configuration for OTP
EMAIL_USER=your email address here
EMAIL_PASS=your email password or app-specific password here

